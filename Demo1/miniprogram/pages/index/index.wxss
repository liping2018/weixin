page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.slide-image{
  width:100%;
  height: 340rpx;
}
.item-list{
  overflow: hidden;
}

.item-pro{
  padding-top: 50rpx;
  overflow: hidden;
}
.pro-body{
  overflow: hidden;
  padding-left: 20rpx;

}

.logo{
  float: left;
  width: 250rpx;
  height: 250rpx;
  padding-left: 20rpx;
}
.pro-title{
  line-height: 1;
  color: #212121;
  font-size: 34rpx;
  
}

.pro-desc{
  font-size: 24rpx;
  color: #9a9a0a;
  line-height: 1.2;

}
.pro-footer{
  overflow: hidden;
}
.btn-detail{
    float: left;
    width: 170rpx;
    height: 52rpx;
    padding: 0;
    line-height: 1
}
.btn-detail image{
  width: 100%;
  height: 100%;
}
.btn-ask{
    float: left;
    width: 170rpx;
    height: 52rpx;
    padding: 0;
    line-height: 1
}
